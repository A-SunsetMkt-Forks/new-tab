import { onClick } from '../helpers';

style {
  #m { /* menu */
    position: absolute;
    padding: 18px 84px 84px 42px;
    margin: -28px -84px -84px 0;
    display: inline-block;
    font-size: 20px;
  }

  #i { /* menu icon */
    font-size: 30px;
    color: var(--g4);
  }

  #d { /* menu dropdown */
    position: absolute;
    z-index: 1;
    top: 18px;
    left: 42px;
    padding: 18px;
    white-space: nowrap;
    background: var(--g1);
    filter: drop-shadow(0 18px 18px rgba(0,0,0,.3));
    transition: all 150ms ease-out;
    opacity: 0;
    transform: scale(0.5);
    transform-origin: 0 18px;

    #m:hover > &,
    #m:focus > & {
      opacity: 1;
      transform: scale(1);
    }
  }

  .m { /* menu item */
    display: block;
    padding: 9px 0;
    color: var(--g5);
  }

  hr {
    width: 100%;
    border: 0;
    border-bottom: 1px solid var(--g0);
  }
}

