{
  "private": true,
  "name": "new-tab",
  "version": "0.14.0",
  "description": "âš¡ A high performance new tab page that gets you where you need to go faster.",
  "homepage": "https://github.com/MaxMilton/new-tab",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "chrome",
    "google-chrome",
    "maxmilton",
    "ntp",
    "svelte"
  ],
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "NODE_ENV=production rollup --config",
    "prebuild": "rm -rf dist && mkdir dist && cp icon* dist",
    "lint": "yarn lint:md && yarn lint:css && yarn lint:js && yarn lint:types",
    "lint:md": "remark --frail --quiet .",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,html,js,md,svelte,ts}'",
    "lint:js": "eslint --ignore-path .gitignore --ext html,js,md,svelte,ts .",
    "lint:types": "tsc --noEmit || true",
    "test": "yarn lint && JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.9.0-beta.7",
    "@minna-ui/eslint-config": "0.21.0",
    "@minna-ui/jest-config": "0.21.0",
    "@minna-ui/pre-markup": "0.21.0",
    "@minna-ui/pre-style": "0.21.0",
    "@minna-ui/remarklint-config": "0.21.0",
    "@minna-ui/rollup-plugins": "0.21.0",
    "@minna-ui/stylelint-config": "0.21.0",
    "@minna-ui/ts-config": "0.21.0",
    "@types/chrome": "0.0.81",
    "@wearegenki/renovate-config": "1.0.0",
    "autoprefixer": "9.4.10",
    "chokidar": "2.1.2",
    "codecov": "3.2.0",
    "crass": "0.12.3",
    "eslint": "5.15.1",
    "jest": "24.3.1",
    "jest-puppeteer": "4.0.0",
    "postcss": "7.0.14",
    "postcss-import": "12.0.1",
    "postcss-nested": "4.1.2",
    "prettier": "1.16.4",
    "puppeteer": "1.13.0",
    "remark-cli": "6.0.1",
    "rollup": "1.6.0",
    "rollup-plugin-analyzer": "3.0.0",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-svelte": "5.0.3",
    "rollup-plugin-typescript": "1.0.0",
    "sinon-chrome": "2.3.2",
    "stylelint": "9.10.1",
    "svelte": "3.0.0-beta.11",
    "tslib": "1.9.3",
    "typescript": "3.3.3333"
  },
  "resolutions": {
    "**/@minna-ui/eslint-config": "link:../minna-ui/utils/eslint-config",
    "**/@minna-ui/jest-config": "link:../minna-ui/utils/jest-config",
    "**/@minna-ui/pre-markup": "link:../minna-ui/utils/pre-markup",
    "**/@minna-ui/pre-style": "link:../minna-ui/utils/pre-style",
    "**/@minna-ui/remarklint-config": "link:../minna-ui/utils/remarklint-config",
    "**/@minna-ui/rollup-plugins": "link:../minna-ui/utils/rollup-plugins",
    "**/@minna-ui/stylelint-config": "link:../minna-ui/utils/stylelint-config",
    "**/@minna-ui/ts-config": "link:../minna-ui/utils/ts-config"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "babel": {
    "presets": [
      "@minna-ui/jest-config/babel-preset.js"
    ]
  },
  "postcss": {
    "map": true,
    "plugins": {
      "postcss-import": {},
      "postcss-nested": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@minna-ui/eslint-config"
    ],
    "env": {
      "webextensions": true
    }
  },
  "stylelint": {
    "extends": "@minna-ui/stylelint-config",
    "rules": {
      "selector-max-id": null,
      "color-no-hex": null
    }
  },
  "remarkConfig": {
    "plugins": [
      "@minna-ui/remarklint-config"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.html",
          "*.svelte"
        ],
        "options": {
          "requirePragma": true
        }
      },
      {
        "files": "*.test.ts",
        "options": {
          "printWidth": 100
        }
      }
    ]
  },
  "jest": {
    "preset": "@minna-ui/jest-config",
    "setupFiles": [
      "<rootDir>/test/__setup__.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{html,js,svelte,ts}",
      "!src/app.ts",
      "!src/settings.ts",
      "!src/template.html"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">11.0.0",
    "yarn": ">1.12.0"
  },
  "os": [
    "!win32",
    "darwin",
    "freebsd",
    "linux",
    "openbsd"
  ]
}
