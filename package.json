{
  "private": true,
  "name": "new-tab",
  "version": "0.14.0",
  "description": "âš¡ A high performance new tab page that gets you where you need to go faster.",
  "homepage": "https://github.com/MaxMilton/new-tab",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "chrome",
    "google-chrome",
    "maxmilton",
    "ntp",
    "svelte"
  ],
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "NODE_ENV=production rollup --config",
    "prebuild": "rm -rf dist && mkdir dist && cp icon* dist",
    "lint": "yarn lint:md && yarn lint:css && yarn lint:js && yarn lint:types",
    "lint:md": "remark --frail --quiet .",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,html,js,md,svelte,ts}'",
    "lint:js": "eslint --ignore-path .gitignore --ext html,js,md,svelte,ts .",
    "lint:types": "tsc --noEmit || true",
    "test": "yarn lint && jest --notify --watch",
    "test-ci": "jest --coverage --runInBand --ci"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.9.0",
    "@types/chrome": "0.0.83",
    "@types/expect-puppeteer": "3.3.1",
    "@types/jest-environment-puppeteer": "4.0.0",
    "@types/puppeteer": "1.12.3",
    "@wearegenki/renovate-config": "1.0.0",
    "chokidar": "2.1.5",
    "codecov": "3.3.0",
    "eslint": "5.16.0",
    "jest": "24.7.1",
    "jest-puppeteer": "4.1.1",
    "minna-tools": "0.22.1-beta.1",
    "minna-ui": "0.22.1-beta.1",
    "postcss": "7.0.14",
    "postcss-scss": "2.0.0",
    "prettier": "1.17.0",
    "puppeteer": "1.14.0",
    "remark-cli": "6.0.1",
    "rollup": "1.10.1",
    "rollup-plugin-node-resolve": "4.2.3",
    "rollup-plugin-svelte": "5.0.3",
    "rollup-plugin-typescript": "1.0.1",
    "stylelint": "10.0.1",
    "svelte": "3.0.0",
    "tslib": "1.9.3",
    "typescript": "3.4.4"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "postcss": {
    "map": false,
    "syntax": "postcss-scss",
    "plugins": {
      "minna-ui/postcss": {
        "unsafe": true
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "./node_modules/minna-tools/eslint.js"
    ],
    "env": {
      "webextensions": true
    },
    "globals": {
      "page": true,
      "browser": true,
      "context": true,
      "jestPuppeteer": true
    }
  },
  "stylelint": {
    "extends": "minna-tools/stylelint",
    "rules": {
      "color-no-hex": null,
      "scale-unlimited/declaration-strict-value": null,
      "selector-max-id": null
    }
  },
  "remarkConfig": {
    "plugins": [
      "minna-tools/remark"
    ]
  },
  "jest": {
    "preset": "minna-tools",
    "globalSetup": "jest-environment-puppeteer/setup",
    "globalTeardown": "jest-environment-puppeteer/teardown",
    "testEnvironment": "jest-environment-puppeteer",
    "setupFilesAfterEnv": [
      "expect-puppeteer"
    ],
    "collectCoverageFrom": [
      "src/**/*.{html,js,svelte,ts}",
      "!src/app.ts",
      "!src/settings.ts",
      "!src/template.html"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">11.0.0",
    "yarn": ">1.15.0"
  },
  "os": [
    "!win32",
    "darwin",
    "freebsd",
    "linux",
    "openbsd"
  ]
}
