{
  "name": "new-tab",
  "version": "0.1.0",
  "description": "A minimal and high performance Google Chrome new tab page (NTP) extension.",
  "keywords": [
    "chrome-extension",
    "chrome",
    "chrome-app",
    "marko",
    "markojs",
    "css-grid"
  ],
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "dev": "APP_RELEASE=$(git describe --always) NODE_ENV=development node dev-server.js",
    "prebuild": "rm -rf .cache dist",
    "build": "APP_RELEASE=$(git describe --always) NODE_ENV=production node build.js",
    "postbuild": "zip -9 -j dist/new-tab.zip dist/*"
  },
  "dependencies": {
    "fast-memoize": "^2.2.8"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.59",
    "@wearegenki/eslint-config": "^0.4.2",
    "@wearegenki/postcss-config": "^0.4.2",
    "@wearegenki/stylelint-config": "^0.4.2",
    "browser-sync": "^2.23.6",
    "clean-css": "^4.1.9",
    "eslint": "^4.16.0",
    "lasso": "^3.1.2",
    "lasso-marko": "^2.4.0",
    "lasso-postcss": "^0.4.0",
    "marko": "^4.7.5",
    "marko-bind": "^0.1.0",
    "postcss": "^6.0.16",
    "stylelint": "^8.4.0",
    "uglify-es": "^3.3.9"
  },
  "engines": {
    "node": ">= 9.4.0",
    "npm": ">= 3.10.10"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
