{
  "name": "new-tab",
  "version": "0.22.0",
  "description": "âš¡ A high-performance new tab page that gets you where you need to go faster.",
  "repository": "maxmilton/new-tab",
  "homepage": "https://github.com/maxmilton/new-tab",
  "author": "Max Milton <max@happyhackers.xyz>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production bun build.ts",
    "dev": "NODE_ENV=development bun build.ts",
    "lint": "bun run lint:fmt && bun run lint:css && bun run lint:js && bun run lint:ts",
    "lint:css": "stylelint '**/*.{css,xcss}'",
    "lint:fmt": "biome check --diagnostic-level=warn",
    "lint:js": "eslint",
    "lint:ts": "tsc --noEmit",
    "test": "bun test --preload ./test/setup.ts test/unit --coverage",
    "test:e2e": "TZ=UTC playwright test test/e2e/*.spec.ts",
    "test:e2e:debug": "bun run test:e2e --debug",
    "test:e2e:ui": "bun run test:e2e --ui",
    "zip": "sh -c 'test -z \"$(git status --porcelain)\"' && bun run build && bun run lint && bun run test && cd dist && zip ../chrome-extension.zip *"
  },
  "patchedDependencies": {
    "happy-dom@14.12.3": "patches/happy-dom@14.12.3.patch"
  },
  "overrides": {
    "lightningcss": "1.23.0"
  },
  "dependencies": {
    "stage1": "0.8.0-next.12"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@ekscss/plugin-import": "0.0.12",
    "@eslint/compat": "1.1.0",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.6.0",
    "@maxmilton/stylelint-config": "0.0.15",
    "@playwright/test": "1.45.0",
    "@types/bun": "1.1.6",
    "@types/chrome": "0.0.268",
    "@types/eslint__eslintrc": "2.1.1",
    "@types/eslint__js": "8.42.3",
    "ekscss": "0.0.17",
    "eslint": "9.6.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-unicorn": "54.0.0",
    "happy-dom": "14.12.3",
    "lightningcss": "1.25.1",
    "stylelint": "16.6.1",
    "stylelint-config-standard": "36.0.1",
    "terser": "5.31.1",
    "typescript": "5.5.3",
    "typescript-eslint": "7.15.0"
  }
