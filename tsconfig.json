// https://www.typescriptlang.org/docs/handbook/tsconfig-json.html

{
  "extends": "@minna-ui/ts-config",
  "compilerOptions": {
    "baseUrl": ".",
    "isolatedModules": true, // ensure compatibility with sucrase
    "outDir": "dist",
    "target": "esnext"
  },
  "exclude": [
    "**/.*rc.js",
    "**/*.config.js",
    "**/*.test.ts", // FIXME: Add correct types to tests
    "dist",
    "node_modules",
    "test/coverage"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
